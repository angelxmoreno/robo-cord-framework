{
    "name": "@apps/summarizer-bot",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "bun run src/index.ts",
        "dev": "bun run --watch src/index.ts",
        "docker": "docker compose --env-file .env -f docker-compose.yml",
        "docker:restart": "bun run docker:stop && bun run docker:start",
        "docker:start": "bun run docker up -d",
        "docker:stop": "bun run docker down",
        "docker:logs": "bun run docker logs",
        "docker:clean": "bun run docker down -v",
        "clean": "rm -rf node_modules bun.lock dist",
        "build": "tsc",
        "typecheck": "tsc --noEmit",
        "test": "bun test",
        "test:watch": "bun test --watch"
    },
    "dependencies": {
        "@robo-cord/framework": "*",
        "zod": "^4.0.15"
    },
    "devDependencies": {
        "@types/bun": "^1.2.19",
        "@robo-cord/tsconfig-shared": "*"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
