{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "robo-cord-framework",
    "private": true,
    "packageManager": "bun@1.2.17",
    "engines": {
        "node": ">=18",
        "bun": ">=1.2"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "clean:root": "rm -rf node_modules bun.lock && bun install",
        "clean": "bun run clean:root && turbo run clean",
        "build": "turbo run build",
        "dev": "turbo run dev",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "typecheck": "turbo run typecheck"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.1.0",
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@types/bun": "^1.2.0",
        "lefthook": "^1.12.0",
        "turbo": "^2.5.0"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
